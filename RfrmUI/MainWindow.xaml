<Window x:Class="RfrmUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RfrmUI"
        mc:Ignorable="d"
        Title="Reformer [Task-2]" Height="670" Width="800"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <GroupBox 
            DockPanel.Dock="Top" 
            Height="80" 
            Header="Путь до папки с входными файлами (data1.xml и transform.xslt):" 
            Margin="10,10,10,0">
            <DockPanel>
                <DockPanel Height="25">
                    <Button 
                        DockPanel.Dock="Right" 
                        Margin="10 0 5 0" 
                        Width="85" 
                        Click="Button_ChangeInputFolder_Click">Выбрать</Button>
                    <TextBlock 
                        Margin="5 0 0 0" 
                        Padding="5 2 0 0" 
                        Background="AliceBlue" 
                        Text="{Binding Folders[0], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </DockPanel>
            </DockPanel>
        </GroupBox>
        <GroupBox 
            DockPanel.Dock="Top" 
            Height="80" 
            Header="Путь до папки с выходными файлами:" 
            Margin="10,10,10,0">
            <DockPanel Height="25">
                <DockPanel>
                    <Button 
                        DockPanel.Dock="Right" 
                        Margin="10 0 5 0" 
                        Width="85" 
                        Click="Button_ChangeOutputFolder_Click">Выбрать</Button>
                    <TextBlock 
                        Margin="5 0 0 0" 
                        Padding="5 2 0 0" 
                        Background="AliceBlue" 
                        Text="{Binding Folders[1], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </DockPanel>
            </DockPanel>
        </GroupBox>
        <GroupBox
            DockPanel.Dock="Bottom" 
            Header="Добавить Item:" 
            Margin="10 0 10 10">
            <DockPanel>
                <UniformGrid 
                    x:Name="ItemUG" 
                    Columns="4" 
                    DockPanel.Dock="Top" 
                    Margin="0 5 0 0" 
                    Height="50">
                    <GroupBox Header="Name">
                        <TextBox x:Name="NameTB" Margin="2" Background="Azure"/>
                    </GroupBox>
                    <GroupBox Header="Surname">
                        <TextBox x:Name="SurnameTB" Margin="2" Background="Azure"/>
                    </GroupBox>
                    <GroupBox Header="Amount">
                        <TextBox x:Name="AmountTB" Margin="2" Background="Azure"/>
                    </GroupBox>
                    <GroupBox Header="Mount">
                        <TextBox x:Name="MountTB" Margin="2" Background="Azure"/>
                    </GroupBox>
                </UniformGrid>
                <Button 
                    HorizontalAlignment="Left"
                    Margin="10 10 0 10"
                    Width="250" 
                    Height="25" 
                    Click="Button_AddItem_Click">Добавить Item и запустить обработку</Button>
            </DockPanel>
        </GroupBox>
        <GroupBox 
            Header="Результат обработки:" 
            Margin="10">
            <DockPanel>
                <StackPanel 
                    DockPanel.Dock="Right" 
                    Orientation="Vertical" 
                    Width="100">
                    <Button 
                        Margin="10 0 5 5" 
                        Height="75" 
                        Click="Button_OpenInputData_Click">
                        <TextBlock 
                            Width="70" 
                            TextWrapping="Wrap" 
                            TextAlignment="Center" 
                            Text="Открыть папку _InputData"/>
                    </Button>
                    <Button 
                        Margin="10 5 5 5" 
                        Height="75" 
                        Click="Button_OpenOutputData_Click">
                        <TextBlock 
                            Width="70" 
                            TextWrapping="Wrap" 
                            TextAlignment="Center" 
                            Text="Открыть папку _OutputData"/>
                    </Button>
                </StackPanel>
                <DockPanel>
                    <DockPanel DockPanel.Dock="Bottom">
                        <Button 
                            HorizontalAlignment="Left"
                            Width="250" 
                            Height="25"
                            Margin="10"
                            Click="Button_MainFlow_Clock">Запустить обработку</Button>    
                    </DockPanel>
                    <ListView 
                        x:Name="ReportLW" 
                        Margin="5 0 0 0"
                        FontFamily="Courier New"/>
                </DockPanel>
            </DockPanel>
        </GroupBox>
    </DockPanel>
</Window>
