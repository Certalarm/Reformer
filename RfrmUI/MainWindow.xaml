<Window x:Class="RfrmUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RfrmUI"
        mc:Ignorable="d"
        Title="Reformer [Task-2]" Height="670" Width="800"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <GroupBox DockPanel.Dock="Top" Height="80" Header="Путь до папки с входными файлами (data1.xml и transform.xslt):" Margin="10,10,10,0" Width="auto">
            <DockPanel>
                <DockPanel Height="25">
                    <TextBlock Background="AliceBlue" DockPanel.Dock="Left" Text="{Binding Folders[0], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="650"></TextBlock>
                    <Button IsEnabled="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=RadioButton}}" DockPanel.Dock="Right" Margin="10 0 0 0" Width="65" Click="ButtonIn_Click">Выбрать</Button>
                </DockPanel>
            </DockPanel>
        </GroupBox>
        <GroupBox DockPanel.Dock="Top" Height="80" Header="Путь до папки с выходными файлами:" Margin="10,10,10,0" Width="auto">
            <DockPanel Height="25">
                <DockPanel>
                    <TextBlock Background="AliceBlue" DockPanel.Dock="Left" Text="{Binding Folders[1], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="650"></TextBlock>
                    <Button IsEnabled="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=RadioButton}}" DockPanel.Dock="Right" Margin="10 0 0 0" Width="65" Click="ButtonOut_Click">Выбрать</Button>
                </DockPanel>
            </DockPanel>
        </GroupBox>
        <GroupBox DockPanel.Dock="Top" Height="310" Header="Результат обработки:" Margin="10">
            <DockPanel>
                <ListView DockPanel.Dock="Top" Height="250"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35*"/>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="25*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Width="250" Height="25">Запустить обработку</Button>    
                </Grid>
            </DockPanel>
        </GroupBox>
        <GroupBox Header="Добавить Item:" Margin="10 0 10 10">
            <DockPanel>
                <UniformGrid Columns="4" DockPanel.Dock="Top" Margin="0 5 0 0" Height="50">
                    <GroupBox Header="Name">
                        <TextBox Margin="2" Background="Azure">lalala</TextBox>
                    </GroupBox>
                    <GroupBox Header="Surname">
                        <TextBox Margin="2" Background="Azure">lalala</TextBox>
                    </GroupBox>
                    <GroupBox Header="Amount">
                        <TextBox Margin="2" Background="Azure">lalala</TextBox>
                    </GroupBox>
                    <GroupBox Header="Mount">
                        <TextBox Margin="2" Background="Azure">lalala</TextBox>
                    </GroupBox>
                </UniformGrid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35*"/>
                        <ColumnDefinition Width="11*"/>
                        <ColumnDefinition Width="27*"/>
                        <ColumnDefinition Width="27*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Width="250" Height="25">Добавить Item и запустить обработку</Button>
                    <Button Grid.Column="2" Width="190" Height="25" >Открыть папку __InputData</Button>
                    <Button Grid.Column="3" Width="190" Height="25">Открыть папку __OutputData</Button>
                </Grid>
            </DockPanel>
        </GroupBox>

    </DockPanel>
</Window>
